<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_listview_divider"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardBackgroundColor="@color/cardview_background">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/iv_products_item"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_products_item"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/iv_products_item"
            android:gravity="center" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
