<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/mainmenu_icon">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_mainbutton"
        android:src="@drawable/main_product"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:id="@+id/tv_main_menu"
        android:layout_below="@+id/iv_mainbutton"
        android:background="@color/main_menu_icon_back"
        android:gravity="center"
        android:text="SHADOW TEXT"
        android:textColor="@color/main_menu_text"
        android:textSize="9dp"
        android:shadowColor="@color/main_menu_text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"/>

</RelativeLayout>