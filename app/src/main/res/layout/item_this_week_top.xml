<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_twt_item_title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/rl_products_item_progress"
        android:gravity="center"
        android:shadowColor="@color/twt_txt_shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <RelativeLayout
        android:id="@+id/rl_products_item_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <!--TODO:It is not ok for the performance reason as it stay still on background display
        <ProgressBar
            android:id="@+id/pb_products_item"
            style="?android:attr/progressBarStyle"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@xml/custom_progress"/>
        -->

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_twt_item"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:src="#00000000"/>
    </RelativeLayout>
</RelativeLayout>

